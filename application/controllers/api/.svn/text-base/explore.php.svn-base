// This can be removed if you use __autoload() in config.php OR use Modular Extensions
require APPPATH.'/libraries/REST_Controller.php';

class Explore extends REST_Controller
{   

    function hottaginfo_get()
    {

        $this->load->model('hottag_model','', TRUE);
        $this->load->model('tag_model','',TRUE);
        $this->load->model('user_model','',TRUE);

        $tagids = $this->hottag_model->get_tags_bynothing();
        $tags = $this->tag_model->get_entrys_bytagids($tagids);

        foreach ($tags as $key => $value) 
        {
            $user = $this->user_model->get_entry_byuid($value['bestauthor']);
            $hottaginfo[$key]['tagname'] = $value['tagname'];
            $hottaginfo[$key]['likesnum'] = $value['likesnum'];
            $hottaginfo[$key]['bestauthorid'] = $value['bestauthor'];
            $hottaginfo[$key]['bestauthorname'] = $user['name'];
            $hottaginfo[$key]['worksnum'] = $value['worksnum'];
        }
      
        if($hottaginfo)
        {
            $this->response($hottaginfo, 200); // 200 being the HTTP response code
        }

        else
        {
            $this->response(array('error' => 'could not be found'), 404);
        }
    } 

    function lastworkinfo_get()
    {
        $this->load->model('work_model','',TRUE);
        $this->load->model('user_model','',TRUE);

        $works = $this->work_model->get_lasttenentrys_bynothing();

        foreach ($works as $key => $value)
        {
            $user = $this->user_model->get_entry_byuid($value['author']);
            $lastworkinfo[$key]['authorid'] = $value['author'];
            $lastworkinfo[$key]['authorname'] = $user['name'];
            $lastworkinfo[$key]['img'] = $value['img'];
            $lastworkinfo[$key]['workid'] = $value['workid'];
            $lastworkinfo[$key]['createdate'] = $value['createdate'];
        }

        if($lastworkinfo)
        {
            $this->response($lastworkinfo, 200); // 200 being the HTTP response code
        }

        else
        {
            $this->response(array('error' => 'bestworkinfo could not be found'), 404);
        }
    }
    
}